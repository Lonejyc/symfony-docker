{% extends 'admin/admin.html.twig' %}

{% block title "Toutes les catégories" %}

{% block body %}
    <p class="my-5">
        <a href="{{ path('admin.category.create') }}" class="text-white bg-teal-700 hover:bg-teal-800 focus:ring-4 focus:ring-teal-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-teal-600 dark:hover:bg-teal-700 focus:outline-none dark:focus:ring-teal-800">Créer une catégorie</a>
    </p>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr class="dark:text-white text-xl">
                    <th scope="col" class="px-6 py-3 text-left dark:text-white">Titre</th>
                    <th scope="col" class="px-6 py-3 text-left dark:text-white">Recettes</th>
                    <th scope="col" class="px-6 py-3 text-left dark:text-white w-1">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-teal-50 divide-y divide-teal-200 dark:bg-gray-500 dark:divide-gray-900">
            {% for category in categories %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <a href="{{ path('admin.category.edit', { id: category.id }) }}" class="text-blue-500 dark:text-blue-100 underline">{{ category.name }}</a>
                    </td>
                    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ category.count }}
                    </td>
                    <td class="px-6 py-4 flex gap-2 justify-end">
                        <a href="{{ path('admin.category.edit', { id: category.id }) }}" class="text-white bg-teal-700 hover:bg-teal-800 focus:ring-4 focus:ring-teal-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-teal-600 dark:hover:bg-teal-700 focus:outline-none dark:focus:ring-teal-800">Éditer</a>
                        <form action="{{ path('admin.category.delete', { id: category.id }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="text-white bg-rose-700 hover:bg-rose-800 focus:ring-4 focus:ring-rose-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-rose-600 dark:hover:bg-rose-700 focus:outline-none dark:focus:ring-rose-800">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
